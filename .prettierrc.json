{
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "printWidth": 80,
    "endOfLine": "auto",
    "arrowParens": "always",
    "importOrder": ["^(react|next?/?([a-zA-Z/]*))$","<THIRD_PARTY_MODULES>", "^/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}